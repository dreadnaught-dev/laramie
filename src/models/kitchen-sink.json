    "models": {
        "Comment": {
            "alias": "excerpt",
            "fields": {
                "content": {
                    "isListByDefault": true,
                    "type": "markdown"
                },
                "email": {
                    "isListByDefault": true,
                    "isRequired": true,
                    "type": "email"
                },
                "excerpt": {
                    "isListByDefault": true,
                    "sql": "(substring(data->'content'->>'markdown', 0, 5))",
                    "type": "computed",
                    "weight": 5
                },
                "ipAddress": {
                    "isListByDefault": false,
                    "type": "text"
                },
                "karma": {
                    "isListByDefault": false,
                    "type": "number"
                },
                "post": {
                    "isListByDefault": true,
                    "relatedModel": "Post",
                    "type": "reference-single"
                },
                "status": {
                    "isListByDefault": true,
                    "options": [
                        "Active",
                        "Inactive"
                    ],
                    "type": "select"
                },
                "url": {
                    "isListByDefault": false,
                    "type": "text"
                }
            }
        },
        "Contact": {
            "alias": "message",
            "fields": {
                "email": {
                    "isListByDefault": true,
                    "isRequired": true,
                    "type": "email"
                },
                "message": {
                    "isListByDefault": true,
                    "type": "markdown"
                },
                "name": {
                    "isListByDefault": true,
                    "type": "text"
                }
            }
        },
        "Homepage": {
            "fields": {
                "featuredImage": {
                    "label": "Featured Image/Video",
                    "isListByDefault": false,
                    "type": "file",
                    "weight": 3
                },
                "section": {
                    "fields": {
                        "background": {
                            "options": [
                                "light",
                                "dark"
                            ],
                            "isRequired": true,
                            "type": "select"
                        },
                        "content": {
                            "type": "markdown"
                        },
                        "image": {
                            "type": "file"
                        },
                        "sectionTitle": {
                            "type": "text"
                        }
                    },
                    "isRepeatable": true,
                    "type": "aggregate"
                },
                "title": {
                    "isListByDefault": true,
                    "isRequired": true,
                    "type": "text",
                    "weight": 1
                }
            },
            "isSingular": true
        },
        "Post": {
            "alias": "title",
            "fields": {
                "allowComments": {
                    "isListByDefault": true,
                    "type": "boolean",
                    "weight": 4
                },
                "content": {
                    "isListByDefault": true,
                    "type": "markdown",
                    "weight": 2
                },
                "featuredImage": {
                    "isListByDefault": false,
                    "type": "file",
                    "weight": 3
                },
                "numComments": {
                    "isListByDefault": true,
                    "sql": "(select count(*) from laramie_data as nd where type = 'Comment' and nd.data->>'post' = laramie_data.id::text)",
                    "type": "computed",
                    "weight": 5
                },
                "slug": {
                    "isListByDefault": false,
                    "isRequired": true,
                    "type": "text"
                },
                "status": {
                    "isListByDefault": true,
                    "options": [
                        "Active",
                        "Inactive"
                    ],
                    "type": "select",
                    "weight": 6
                },
                "title": {
                    "isListByDefault": true,
                    "isRequired": false,
                    "type": "text",
                    "weight": 1
                }
            }
        }
